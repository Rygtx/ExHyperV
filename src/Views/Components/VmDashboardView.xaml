<UserControl x:Class="ExHyperV.Views.Components.VmDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:converters="clr-namespace:ExHyperV.Converters" 
             xmlns:tools="clr-namespace:ExHyperV.Tools"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:DiskTypeToTextConverter x:Key="DiskTypeToTextConverter" />
        <DrawingBrush x:Key="FineGridBrush" Viewport="0,0,10,10" ViewportUnits="Absolute" TileMode="Tile">
            <DrawingBrush.Drawing>
                <GeometryDrawing>
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="0,0,10,10"/>
                    </GeometryDrawing.Geometry>
                    <GeometryDrawing.Pen>
                        <Pen Brush="#15FFFFFF" Thickness="0.5"/>
                    </GeometryDrawing.Pen>
                </GeometryDrawing>
            </DrawingBrush.Drawing>
        </DrawingBrush>
    </UserControl.Resources>

    <ScrollViewer Padding="24,0,24,24" VerticalScrollBarVisibility="Auto">
        <StackPanel>

            <!-- 处理器 (CPU) 折叠卡片 -->
            <ui:CardExpander Margin="0,0,0,8" IsExpanded="False">
                <ui:CardExpander.Header>
                    <Grid MinHeight="38" Margin="8,0,12,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <ui:FontIcon FontSize="24" FontFamily="{DynamicResource SegoeFluentIcons}" Glyph="&#xF58E;" RenderTransformOrigin="0.5,0.5" Margin="-5,0,12,0">
                                <ui:FontIcon.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="90"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </ui:FontIcon.RenderTransform>
                            </ui:FontIcon>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="处理器" FontSize="16" />
                                <TextBlock Text="核心配置与实时监控" FontSize="12" Opacity="0.6" Margin="0,2,0,0" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="{Binding SelectedVm.AverageUsage, StringFormat='{}{0:N1}'}" FontSize="20" FontWeight="Light" VerticalAlignment="Bottom" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Text="%" FontSize="14" Margin="2,0,0,3" VerticalAlignment="Bottom" Opacity="0.8"/>
                        </StackPanel>
                        <ui:Button Grid.Column="4" Appearance="Transparent" Padding="8,4" Command="{Binding DataContext.GoToCpuSettingsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}">
                            <ui:SymbolIcon Symbol="Settings24" FontSize="18"/>
                        </ui:Button>
                    </Grid>
                </ui:CardExpander.Header>

                <Grid Margin="-5">
                    <ItemsControl ItemsSource="{Binding SelectedVm.Cores}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <tools:StretchUniformGrid 
                                    Columns="{Binding SelectedVm.Columns}" 
                                    Rows="{Binding SelectedVm.Rows}" 
                                    />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="1" Height="80">
                                    <Border CornerRadius="4" BorderThickness="1" BorderBrush="#1A888888" Background="#08FFFFFF" ClipToBounds="True">
                                        <Grid>
                                            <Rectangle Fill="{StaticResource FineGridBrush}"/>
                                            <Viewbox Stretch="Fill" x:Name="WaveGraph">
                                                <Grid Width="100" Height="100">
                                                    <Polygon Points="{Binding HistoryPoints}" Fill="#66117DBB"/>
                                                    <Polyline Points="{Binding HistoryPoints}" Stroke="#FF54C7FC" StrokeThickness="1.5"/>
                                                </Grid>
                                            </Viewbox>
                                            <StackPanel Orientation="Horizontal" Margin="5,3,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
                                                <TextBlock Text="{Binding CoreId}" FontSize="10" Opacity="0.5" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                                            </StackPanel>
                                            <TextBlock x:Name="UsageText" Text="{Binding Usage, StringFormat='{}{0:N1}%'}" FontSize="18"  HorizontalAlignment="Center" VerticalAlignment="Center"  Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                                            <TextBlock x:Name="OffText" Text="OFF" FontSize="24" FontWeight="Bold" Opacity="0.2" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}" Visibility="Collapsed"/>
                                        </Grid>
                                    </Border>
                                </Grid>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding DataContext.SelectedVm.IsRunning, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="False">
                                        <Setter TargetName="WaveGraph" Property="Visibility" Value="Collapsed"/>
                                        <Setter TargetName="UsageText" Property="Visibility" Value="Collapsed"/>
                                        <Setter TargetName="OffText" Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </ui:CardExpander>

            <!-- 内存 (Memory) 折叠卡片 -->
            <ui:CardExpander Margin="0,0,0,8" IsExpanded="False">
                <ui:CardExpander.Header>
                    <Grid MinHeight="38" Margin="8,0,12,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- 左侧：图标与标题 -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <ui:FontIcon FontSize="24" FontFamily="{DynamicResource SegoeFluentIcons}" Glyph="&#xEEA0;" Margin="-5,0,12,0"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="内存" FontSize="16" />
                                <TextBlock Text="内存配置与使用趋势" FontSize="12" Opacity="0.6" Margin="0,2,0,0" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- 中间/右侧：数值显示 (A / B 形式) -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="{Binding SelectedVm.DemandMemoryGb, StringFormat='{}{0:N1}', FallbackValue='4.2'}" 
                                       FontSize="20" FontWeight="Light" VerticalAlignment="Bottom" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Text="GB" FontSize="14" Margin="2,0,0,3" VerticalAlignment="Bottom" Opacity="0.8"/>

                            <TextBlock Text="/" FontSize="20" FontWeight="Light" VerticalAlignment="Bottom" Margin="8,0,8,0" Opacity="0.4"/>

                            <TextBlock Text="{Binding SelectedVm.AssignedMemoryGb, StringFormat='{}{0:N1}', FallbackValue='16.0'}" 
                                       FontSize="20" FontWeight="Light" VerticalAlignment="Bottom" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Text="GB" FontSize="14" Margin="2,0,0,3" VerticalAlignment="Bottom" Opacity="0.8"/>
                        </StackPanel>

                        <!-- 右侧：设置按钮 -->
                        <ui:Button Grid.Column="4" Appearance="Transparent" Padding="8,4" Command="{Binding DataContext.GoToMemorySettingsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}">
                            <ui:SymbolIcon Symbol="Settings24" FontSize="18"/>
                        </ui:Button>
                    </Grid>
                </ui:CardExpander.Header>

                <Grid Margin="-5" Height="100">
                    <Border CornerRadius="6" BorderThickness="1" BorderBrush="#1A888888" Background="#05FFFFFF" ClipToBounds="True">
                        <Grid>
                            <Rectangle Fill="{StaticResource FineGridBrush}" Opacity="0.3"/>
                            <Viewbox Stretch="Fill">
                                <Grid Width="59" Height="100">
                                    <Polygon Points="{Binding SelectedVm.MemoryHistoryPoints}" Fill="#FF54C7FC"/>
                                </Grid>
                            </Viewbox>
                            <TextBlock Text="内存使用趋势" 
                                       FontSize="12" 
                                       Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"
                                       HorizontalAlignment="Left" 
                                       VerticalAlignment="Top" 
                                       Margin="12,8"/>
                        </Grid>
                    </Border>
                </Grid>
            </ui:CardExpander>

            <!-- 存储 (Storage) 折叠卡片 -->
            <ui:CardExpander Margin="0,0,0,8" IsExpanded="False">
                <ui:CardExpander.Header>
                    <Grid MinHeight="38" Margin="8,0,12,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- 左侧：图标与标题 -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <ui:FontIcon FontSize="22" FontFamily="{DynamicResource SegoeFluentIcons}" Glyph="&#xEDA2;" Margin="-5,0,12,0" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="存储" FontSize="16"  Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                                <TextBlock Text="磁盘空间与读写速率" FontSize="12" Opacity="0.6" Margin="0,2,0,0" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- 右侧：总容量 -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="{Binding SelectedVm.TotalDiskSizeGb, StringFormat='{}{0:N1}', FallbackValue='0.0'}" 
                                       FontSize="20" FontWeight="Light" VerticalAlignment="Bottom" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Text="GB" FontSize="14" Margin="2,0,0,3" VerticalAlignment="Bottom" Opacity="0.6" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                        </StackPanel>

                        <ui:Button Grid.Column="4" Appearance="Transparent" Padding="8,4" Command="{Binding DataContext.GoToStorageSettingsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}">
                            <ui:SymbolIcon Symbol="Settings24" FontSize="18" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                        </ui:Button>
                    </Grid>
                </ui:CardExpander.Header>

                <Grid Margin="-5">
                    <ItemsControl ItemsSource="{Binding SelectedVm.Disks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,6" CornerRadius="4" BorderThickness="1" BorderBrush="#1A888888" Background="#05FFFFFF">
                                    <Grid Margin="12,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <ui:FontIcon Grid.Column="0" 
                                                     FontFamily="{DynamicResource SegoeFluentIcons}"
                                                     FontSize="28" 
                                                     VerticalAlignment="Center" 
                                                     Margin="0,0,16,0" 
                                                     Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}">
                                            <ui:FontIcon.Style>
                                                <Style TargetType="ui:FontIcon">
                                                    <Setter Property="Glyph" Value="&#xEC59;"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DiskType}" Value="ISO">
                                                            <Setter Property="Glyph" Value="&#xE958;"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding DiskType}" Value="DvdDrive">
                                                            <Setter Property="Glyph" Value="&#xE958;"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding DiskType}" Value="DVD">
                                                            <Setter Property="Glyph" Value="&#xE958;"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ui:FontIcon.Style>
                                        </ui:FontIcon>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <Grid>
                                                <TextBlock Text="{Binding Name}" 
                                                           FontSize="14" 
                                                           TextTrimming="CharacterEllipsis"
                                                           VerticalAlignment="Center"
                                                           Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>

                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding IoSpeedText}" 
                                                               FontSize="11" 
                                                               Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"
                                                               Opacity="0.8"
                                                               Margin="0,0,12,0"
                                                               VerticalAlignment="Center"
                                                               FontFamily="Segoe UI, Microsoft YaHei">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding DataContext.SelectedVm.IsRunning, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="False">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                    
                                                    <Border Background="{ui:ThemeResource ControlFillColorTertiaryBrush}" 
        BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}" 
        BorderThickness="1" 
        CornerRadius="3" 
        Padding="5,1">
                                                        <TextBlock Text="{Binding DiskType, Converter={StaticResource DiskTypeToTextConverter}}" 
               FontSize="10" 
               Opacity="0.8" 
               FontWeight="Medium"
               Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                                                    </Border>
                                                </StackPanel>
                                            </Grid>

                                            <Grid Margin="0,8,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <ProgressBar Grid.Column="0" 
                                                             Value="{Binding UsagePercentage, Mode=OneWay}" 
                                                             Maximum="100" 
                                                             Height="12" 
                                                             VerticalAlignment="Center" 
                                                             Background="#1A888888" 
                                                             Foreground="#FF54C7FC"/>
                                                <TextBlock Grid.Column="1" 
                                                           Text="{Binding UsageText}" 
                                                           FontSize="12" 
                                                           Margin="12,0,0,0" 
                                                           VerticalAlignment="Center"
                                                           Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                                            </Grid>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <TextBlock Text="未挂载虚拟磁盘" HorizontalAlignment="Center" Opacity="0.4" Margin="20" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedVm.Disks.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </ui:CardExpander>

            <!-- 显卡 (GPU) 折叠卡片 -->
            <ui:CardExpander Margin="0,0,0,8" IsExpanded="False">
                <ui:CardExpander.Header>
                    <Grid MinHeight="38" Margin="8,0,12,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- 左侧：图标与标题 -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <ui:FontIcon FontSize="22" FontFamily="{DynamicResource SegoeFluentIcons}" Glyph="&#xF211;" Margin="-5,0,12,0" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="显卡" FontSize="16" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                                <TextBlock Text="GPU 配置与引擎负载" FontSize="12" Opacity="0.6" Margin="0,2,0,0" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- 中间：总体利用率数值 -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock FontSize="20" FontWeight="Light" VerticalAlignment="Bottom" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="{Binding SelectedVm.GpuMaxUsage, StringFormat='{}{0:N1}'}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedVm.HasGpu}" Value="False">
                                                <Setter Property="Text" Value="0.0"/>
                                                <Setter Property="Opacity" Value="0.3"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding SelectedVm.IsGpuActive}" Value="False">
                                                <Setter Property="Opacity" Value="0.3"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Text="%" FontSize="14" Margin="2,0,0,3" VerticalAlignment="Bottom" Opacity="0.8"/>
                        </StackPanel>

                        <ui:Button Grid.Column="4" Appearance="Transparent" Padding="8,4" Command="{Binding DataContext.GoToGpuSettingsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}">
                            <ui:SymbolIcon Symbol="Settings24" FontSize="18"/>
                        </ui:Button>
                    </Grid>
                </ui:CardExpander.Header>

                <Grid Margin="-5">
                    <!-- 1. 正常活动状态 -->
                    <UniformGrid x:Name="GpuEnginesGrid" Rows="1" Columns="4">
                        <UniformGrid.Style>
                            <Style TargetType="UniformGrid">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding SelectedVm.IsRunning}" Value="True"/>
                                            <Condition Binding="{Binding SelectedVm.IsGpuActive}" Value="True"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </UniformGrid.Style>

                        <Grid Margin="2" Height="80">
                            <Border CornerRadius="4" BorderThickness="1" BorderBrush="#1A888888" Background="#08FFFFFF" ClipToBounds="True">
                                <Grid>
                                    <Rectangle Fill="{StaticResource FineGridBrush}"/>
                                    <Viewbox Stretch="Fill">
                                        <Grid Width="100" Height="100">
                                            <Polygon Points="{Binding SelectedVm.Gpu3dHistoryPoints}" Fill="#66117DBB"/>
                                            <Polyline Points="{Binding SelectedVm.Gpu3dHistoryPoints}" Stroke="#FF54C7FC" StrokeThickness="1.5"/>
                                        </Grid>
                                    </Viewbox>
                                    <TextBlock Text="3D 渲染" FontSize="10" Margin="5,3" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="{Binding SelectedVm.Gpu3dUsage, StringFormat='{}{0:N1}%'}" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"  Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                                </Grid>
                            </Border>
                        </Grid>

                        <Grid Margin="2" Height="80">
                            <Border CornerRadius="4" BorderThickness="1" BorderBrush="#1A888888" Background="#08FFFFFF" ClipToBounds="True">
                                <Grid>
                                    <Rectangle Fill="{StaticResource FineGridBrush}"/>
                                    <Viewbox Stretch="Fill">
                                        <Grid Width="100" Height="100">
                                            <Polygon Points="{Binding SelectedVm.GpuCopyHistoryPoints}" Fill="#66117DBB"/>
                                            <Polyline Points="{Binding SelectedVm.GpuCopyHistoryPoints}" Stroke="#FF54C7FC" StrokeThickness="1.5"/>
                                        </Grid>
                                    </Viewbox>
                                    <TextBlock Text="数据复制" FontSize="10" Margin="5,3" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="{Binding SelectedVm.GpuCopyUsage, StringFormat='{}{0:N1}%'}" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"  Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                                </Grid>
                            </Border>
                        </Grid>

                        <Grid Margin="2" Height="80">
                            <Border CornerRadius="4" BorderThickness="1" BorderBrush="#1A888888" Background="#08FFFFFF" ClipToBounds="True">
                                <Grid>
                                    <Rectangle Fill="{StaticResource FineGridBrush}"/>
                                    <Viewbox Stretch="Fill">
                                        <Grid Width="100" Height="100">
                                            <Polygon Points="{Binding SelectedVm.GpuEncodeHistoryPoints}" Fill="#66117DBB"/>
                                            <Polyline Points="{Binding SelectedVm.GpuEncodeHistoryPoints}" Stroke="#FF54C7FC" StrokeThickness="1.5"/>
                                        </Grid>
                                    </Viewbox>
                                    <TextBlock Text="视频编码" FontSize="10" Margin="5,3" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="{Binding SelectedVm.GpuEncodeUsage, StringFormat='{}{0:N1}%'}" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"  Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                                </Grid>
                            </Border>
                        </Grid>

                        <Grid Margin="2" Height="80">
                            <Border CornerRadius="4" BorderThickness="1" BorderBrush="#1A888888" Background="#08FFFFFF" ClipToBounds="True">
                                <Grid>
                                    <Rectangle Fill="{StaticResource FineGridBrush}"/>
                                    <Viewbox Stretch="Fill">
                                        <Grid Width="100" Height="100">
                                            <Polygon Points="{Binding SelectedVm.GpuDecodeHistoryPoints}" Fill="#66117DBB"/>
                                            <Polyline Points="{Binding SelectedVm.GpuDecodeHistoryPoints}" Stroke="#FF54C7FC" StrokeThickness="1.5"/>
                                        </Grid>
                                    </Viewbox>
                                    <TextBlock Text="视频解码" FontSize="10" Margin="5,3" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="{Binding SelectedVm.GpuDecodeUsage, StringFormat='{}{0:N1}%'}" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"  Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </UniformGrid>

                    <!-- 2. 驱动未就绪状态 -->
                    <Border x:Name="GpuNotReady" Padding="30">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding SelectedVm.HasGpu}" Value="True"/>
                                            <Condition Binding="{Binding SelectedVm.IsRunning}" Value="True"/>
                                            <Condition Binding="{Binding SelectedVm.IsGpuActive}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="显卡驱动未就绪" HorizontalAlignment="Center" Opacity="0.6" FontSize="14" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- 3. 未开机状态 -->
                    <Border x:Name="VmOffStatus" Padding="30">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding SelectedVm.HasGpu}" Value="True"/>
                                            <Condition Binding="{Binding SelectedVm.IsRunning}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="虚拟机未启动" HorizontalAlignment="Center" Opacity="0.4" FontSize="14" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                    </Border>

                    <!-- 4. 未分配状态 -->
                    <Border x:Name="NoGpuStatus" Padding="30">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedVm.HasGpu}" Value="False">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="虚拟机未分配显卡" HorizontalAlignment="Center" Opacity="0.4" FontSize="14" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                    </Border>
                </Grid>
            </ui:CardExpander>

            <!-- 网络 (Network) 折叠卡片 -->
            <ui:CardExpander Margin="0,0,0,8" IsExpanded="False">
                <ui:CardExpander.Header>
                    <Grid MinHeight="38" Margin="8,0,12,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- 左侧：图标与标题 -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <ui:FontIcon FontSize="22" FontFamily="{DynamicResource SegoeFluentIcons}" Glyph="&#xE774;" Margin="-5,0,12,0" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="网络" FontSize="16" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                                <TextBlock Text="网络设置与连接信息" FontSize="12" Opacity="0.6" Margin="0,2,0,0" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        </StackPanel>

                        <!-- 右侧：设置按钮 -->
                        <ui:Button Grid.Column="4" Appearance="Transparent" Padding="8,4" Command="{Binding DataContext.GoToNetworkSettingsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}">
                            <ui:SymbolIcon Symbol="Settings24" FontSize="18" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                        </ui:Button>
                    </Grid>
                </ui:CardExpander.Header>

                <Grid Margin="-5">
                    <ItemsControl ItemsSource="{Binding SelectedVm.NetworkAdapters}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,6" CornerRadius="4" BorderThickness="1" BorderBrush="#1A888888" Background="#05FFFFFF">
                                    <Grid Margin="12,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <ui:FontIcon Grid.Column="0" 
                                                     FontFamily="{DynamicResource SegoeFluentIcons}"
                                                     FontSize="24" 
                                                     Glyph="&#xE839;"
                                                     VerticalAlignment="Center" 
                                                     Margin="0,0,12,0">
                                            <ui:FontIcon.Style>
                                                <Style TargetType="ui:FontIcon">
                                                    <Setter Property="Foreground" Value="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsConnected}" Value="False">
                                                            <Setter Property="Foreground" Value="{ui:ThemeResource TextFillColorDisabledBrush}"/>
                                                            <Setter Property="Opacity" Value="0.5"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ui:FontIcon.Style>
                                        </ui:FontIcon>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <!-- 第一行：IP 地址 + 速率 -->
                                            <Grid>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding IpAddressDisplay, FallbackValue='获取中...'}" 
                                                               FontSize="14" 
                                                               FontWeight="SemiBold"
                                                               Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                                                </StackPanel>

                                                <TextBlock Text="{Binding NetworkSpeedText}" 
                                                           FontSize="11" 
                                                           Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"
                                                           HorizontalAlignment="Right"
                                                           VerticalAlignment="Center"/>
                                            </Grid>

                                            <!-- 第二行：网卡名 - 交换机名 -->
                                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                <TextBlock Text="{Binding Name}" FontSize="12" Opacity="0.8" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                                                <TextBlock Text=" - " FontSize="12" Opacity="0.5" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                                                <Border Background="#15FFFFFF" CornerRadius="3" Padding="4,0" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding SwitchName, FallbackValue='未连接'}" FontSize="11" />
                                                </Border>
                                            </StackPanel>

                                            <!-- 第三行：MAC 地址 -->
                                            <TextBlock Text="{Binding MacAddress}" 
                                                       FontSize="10" 
                                                       
                                                       Margin="0,2,0,0"
                                                       Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <TextBlock Text="未配置网络适配器" HorizontalAlignment="Center" Opacity="0.4" Margin="20" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedVm.NetworkAdapters.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </ui:CardExpander>

        </StackPanel>
    </ScrollViewer>
</UserControl>