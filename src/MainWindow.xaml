<ui:FluentWindow x:Class="ExHyperV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExHyperV"
        xmlns:pages="clr-namespace:ExHyperV.Views.Pages"
        xmlns:properties="clr-namespace:ExHyperV.Properties"
        mc:Ignorable="d"
        Title="ExHyperV" Height="800" Width="1100"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- 布局规划 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- 标题栏 -->
        <ui:TitleBar Title="ExHyperV" VerticalAlignment="Center" Grid.ColumnSpan="2">
            <ui:TitleBar.Icon>
            <ui:ImageIcon Margin="-3,-16,0,-16" Width="20" Height="20">
                <ui:ImageIcon.Source>
                    <BitmapImage UriSource="pack://application:,,,/Assets/Icon.png"/>
                </ui:ImageIcon.Source>
            </ui:ImageIcon>
        </ui:TitleBar.Icon>
        </ui:TitleBar>

        <!-- 左侧菜单 -->
        <ui:NavigationView x:Name="RootNavigation" Grid.Row="1" OpenPaneLength="180" IsPaneOpen="False" IsBackButtonVisible="Collapsed" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem
                    Content="{x:Static properties:Resources.Main}"
                    NavigationCacheMode="Enabled"
                    TargetPageType="{x:Type pages:MainPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon FontFamily="{DynamicResource SegoeFluentIcons}" Glyph="&#xE80F;" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem
                    Content="{x:Static properties:Resources.complisetting}"
                    NavigationCacheMode="Enabled"
                    TargetPageType="{x:Type pages:HostPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon FontSize="16" FontFamily="{DynamicResource SegoeFluentIcons}" Glyph="&#xE737;"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                

                <ui:NavigationViewItem
                    Content="{x:Static properties:Resources.Menu_VM}"
                    NavigationCacheMode="Enabled"
                    TargetPageType="{x:Type pages:VirtualMachinesPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon FontSize="16" FontFamily="{DynamicResource SegoeFluentIcons}" Glyph="&#xF5ED;"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                
                <ui:NavigationViewItem
                    x:Name="dda"
                    Content="{x:Static properties:Resources.DDA}"
                    NavigationCacheMode="Enabled"
                    TargetPageType="{x:Type pages:DDAPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon FontSize="16" FontFamily="{DynamicResource SegoeFluentIcons}" Glyph="&#xF0B9;"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <ui:NavigationViewItem
                    x:Name="VMnet"
                    Content="{x:Static properties:Resources.Title_VirtualSwitch}"
                    NavigationCacheMode="Enabled"
                    Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"
                    TargetPageType="{x:Type pages:SwitchPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon FontSize="16" FontFamily="{DynamicResource SegoeFluentIcons}" Glyph="&#xE774;"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

                <!-- USB 直通菜单项 -->
                <ui:NavigationViewItem
    x:Name="USBPassThrough"
    Content="USB 直通" 
    NavigationCacheMode="Enabled"
    TargetPageType="{x:Type pages:USBPage}">
                    <ui:NavigationViewItem.Icon>
                        <!-- 使用 USB 相关的图标 -->
                        <ui:FontIcon FontSize="16" FontFamily="{DynamicResource SegoeFluentIcons}" Glyph="&#xE88E;"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>

            </ui:NavigationView.MenuItems>

            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem
                    Content="{x:Static properties:Resources.Settings}"
                    NavigationCacheMode="Disabled"
                    TargetPageType="{x:Type pages:Setting}">
                    <ui:NavigationViewItem.Icon>
                        <ui:FontIcon FontSize="16" FontFamily="{DynamicResource SegoeFluentIcons}" Glyph="&#xE713;"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.FooterMenuItems>
            
            

        </ui:NavigationView>
        
        <ContentPresenter Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2" x:Name="ContentPresenterForDialogs"/>
        <ui:SnackbarPresenter Grid.Row="2" Grid.Column="1" VerticalAlignment="Bottom" x:Name="SnackbarPresenter"/>
        
    </Grid>
</ui:FluentWindow>
    
